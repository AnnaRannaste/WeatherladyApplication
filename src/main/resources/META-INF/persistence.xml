<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.1">
    <persistence-unit name="weatherlady">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!-- <class>pkg.HibernateDemo.Location</class> -->
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <!-- <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost/weatherlady"/>-->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/weatherlady?createDatabaseIfNotExist=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="0000"/>

        </properties>

    </persistence-unit>

</persistence>

